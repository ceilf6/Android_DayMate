<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- 优先级指示器 -->
        <View
            android:id="@+id/viewPriorityIndicator"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="12dp"
            android:background="@color/priority_default" />

        <!-- 事件内容 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- 标题和优先级符号 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/tvEventTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="事件标题"
                    android:textColor="@color/primary_text"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/tvPrioritySymbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="!!"
                    android:textColor="@color/priority_medium"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"
                    android:visibility="gone" />

            </LinearLayout>

            <!-- 时间信息 -->
            <TextView
                android:id="@+id/tvEventTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09:00 - 10:00"
                android:textColor="@color/secondary_text"
                android:textSize="14sp"
                android:layout_marginBottom="4dp"
                android:drawablePadding="4dp"
                app:drawableStartCompat="@drawable/ic_access_time"
                app:drawableTint="@color/secondary_text" />

            <!-- 地点信息 -->
            <TextView
                android:id="@+id/tvEventLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="会议室A"
                android:textColor="@color/secondary_text"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:drawablePadding="4dp"
                app:drawableStartCompat="@drawable/ic_location_on"
                app:drawableTint="@color/secondary_text"
                android:visibility="gone" />

        </LinearLayout>

        <!-- 事件状态指示器 -->
        <ImageView
            android:id="@+id/ivEventStatus"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_check_circle"
            app:tint="@color/event_confirmed"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
